<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:Outseek.AvaloniaClient.Views">
    <Design.PreviewWith>
        <views:ZoomAdjusterView Height="40" Width="400" />
    </Design.PreviewWith>

    <Style Selector="views|ZoomAdjusterView Thumb#PART_ResizeStartThumb">
        <Setter Property="Template">
            <ControlTemplate>
                <Border BorderThickness="4 4 0 4" 
                        Background="transparent"
                        BorderBrush="#606060"
                        Width="15" />
            </ControlTemplate>
        </Setter>
    </Style>
    <Style Selector="views|ZoomAdjusterView Thumb#PART_ResizeEndThumb">
        <Setter Property="Template">
            <ControlTemplate>
                <Border BorderThickness="0 4 4 4"
                        Background="transparent"
                        BorderBrush="#606060"
                        Width="15" />
            </ControlTemplate>
        </Setter>
    </Style>

    <Style Selector="views|ZoomAdjusterView Thumb#PART_DragThumb">
        <Setter Property="Template">
            <ControlTemplate>
                <Border Margin="2" Background="#6E3B3B46" />
            </ControlTemplate>
        </Setter>
    </Style>
    
    <Style Selector="Panel#ZoomAdjusterPanel">
        <Setter Property="Background" Value="#66000000"/>
    </Style>

</Styles>
