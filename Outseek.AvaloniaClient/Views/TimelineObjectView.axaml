<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Outseek.AvaloniaClient.ViewModels"
             mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="250"
             x:Class="Outseek.AvaloniaClient.Views.TimelineObjectView">
    <Design.DataContext>
        <viewModels:TimelineObjectViewModel />
    </Design.DataContext>

    <!-- chooses view dynamically using the ViewLocator -->
    <Panel>
        <ContentControl Content="{Binding TimelineObject}" />
        <Border IsVisible="{Binding TimelineObject.Error, Converter={x:Static ObjectConverters.IsNotNull}}"
                Background="#99ff0000">
            <Label Content="{Binding TimelineObject.Error}" />
        </Border>
    </Panel>
</UserControl>
