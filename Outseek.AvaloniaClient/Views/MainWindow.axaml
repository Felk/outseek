<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:Outseek.AvaloniaClient.ViewModels"
        mc:Ignorable="d" d:DesignWidth="700" d:DesignHeight="450"
        x:Class="Outseek.AvaloniaClient.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="Outseek">

    <Design.DataContext>
        <viewModels:MainWindowViewModel />
    </Design.DataContext>

    <Grid RowDefinitions="*,*" ColumnDefinitions="1*,2*"
          DragDrop.AllowDrop="True">
        <Panel Grid.Row="0" Grid.Column="0">
            <Label Content="" />
        </Panel>
        <ContentControl
            Grid.Row="0" Grid.Column="1"
            Content="{Binding VideoplayerViewModel}" />
        <ContentControl
            Grid.ColumnSpan="2" Grid.Row="1" Grid.Column="0"
            Content="{Binding TimelineViewModel}" />
    </Grid>

</Window>
