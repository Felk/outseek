<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:AvaloniaOutseekClient.ViewModels"
             xmlns:controls="clr-namespace:AvaloniaOutseekClient.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AvaloniaOutseekClient.Views.TimelineSegmentView">
    <Design.DataContext>
        <viewModels:TimelineSegmentViewModel />
    </Design.DataContext>

    <controls:HorizontalSegment From="{Binding FromScaled}"
                                To="{Binding ToScaled}"
                                Step="{Binding StepScaled}"
                                IsEditable="True">
        <Border CornerRadius="2" Classes="PART_Border">
            <StackPanel Orientation="Horizontal">
                <Label Content="{Binding From, StringFormat=\{0:00.00\}}" />
                <Label Content="-" />
                <Label Content="{Binding To, StringFormat=\{0:00.00\}}" />
            </StackPanel>
        </Border>
    </controls:HorizontalSegment>

</UserControl>
